                <div class="tableheader_wrapper">
                  {% if section.settings['tablemodule-text4'] != blank %}
                    <p>{{ section.settings['tablemodule-text4'] }}s</p>
                  {% endif %}
                  {% if section.settings['tablemodule-image4'] != blank %}
                    <div class="icon">
                      <img

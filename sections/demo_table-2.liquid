                </th>
              {% endif %}
              {% if block.settings['col-1-icon_image'] %}
                <td class="tablemodule-valuecell cell_Primary_color">
                  <span class="a-size-base {{ block.settings.image_cell_class }}">
                    <img src="{{ block.settings.col-1-icon_image | img_url: 'master' }}"
                  ></span>
                  <!-- <span class="a-size-base mobile_icon">
                    <img src="{{ block.settings.col-1-icon_image_mobile | img_url: 'master' }}"
                  ></span> -->

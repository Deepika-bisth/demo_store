                <div class="tableheader_wrapper">
                  {% if section.settings['tablemodule-image7'] != blank %}
                    <div class="icon">
                      <img
                        src="{{ section.settings.tablemodule-image7 | img_url: 'master' }}"
                        width="50px"
                      >

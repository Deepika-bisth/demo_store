                {% elsif block.settings['col-3_text'] %}
                <td class="tablemodule-valuecell">
                  <p>{{ block.settings['col-3_text'] }}</p>
                </td>
              {% endif %}
              
            </tr>
          {% endfor %}
        </tbody>
      </table>
    </div>
  </div>
</div>

{% style %}
.comparisonTable .tablemodule{
    display:flex;
    align-items:center;
    justify-content: space-between;
}
.comparisonTable .bm-table-container .tablemodule-table {
    border:none;
}
.comparisonTable .heading-content{
    max-width:368px;
}
.comparisonTable .heading-content h2,
.comparisonTable .heading-content p{
  text-align: {{section.settings.text_align}};
}
.comparisonTable .heading-content h2{
    font-size:{{section.settings.heading_size}}px;
    margin:0;
    margin-bottom:52px;
    font-style: normal;
    font-weight: 700;
    line-height: 140%;
}
.comparisonTable .heading-content p{
    font-size:{{section.settings.text_size}}px;
     margin-bottom:40px !important;
    font-style: normal;
    font-weight: 400;
    line-height: 140%;
    color: #121212;
}
/* .tablemodule .tablemodule-table .tablemodule-image:last-child .icon{
  max-width:56px;
} */
#shopify-section-{{ section.id }} .tablemodule-image p {
          color: #242E2A;
          text-align: center;
          font-size: 17px;
          font-style: normal;
          font-weight: 800;
          line-height: 24px; /* 141.176% */
          text-transform: capitalize;
}
.comparisonTable .tablemodule-row.even-row{
    background-color:#FFFFFF;
}
.comparisonTable .tablemodule-row.odd-row{
    background-color:#F9F9F9;
}
.comparisonTable .heading-content a,
.comparisonTable .tablemodule-row a {
        border-radius: 5px;
        background: var(--Primary, #DC1F26);
        display: flex;
        padding: 16px 32px;
        justify-content: center;
        align-items: center;
        gap: 10px;
        max-width: 315px;
        color: #fff;
        text-decoration: none;
        margin: auto;
}
#shopify-section-{{ section.id }}{
      background-color: {{section.settings.section_background}};
      padding:{{section.settings.section_padding}};
}
#shopify-section-{{ section.id }} .tablemodule-valuecell.cell_Primary_color,
#shopify-section-{{ section.id }} .tablemodule-image.cell_Primary_color{
      background-color: {{section.settings.cell_Primary_color}};
     
  }
#shopify-section-{{ section.id }} .tablemodule-valuecell.cell_Primary_color p{
    color: {{ section.settings.Selected_content_color }};
}


table.tablemodule-table tr{
    height:51px;
}
.tablemodule-valuecell {
     padding: 10px;
     min-width:193px;
}
.tablemodule .icon {
    max-width: 92px;
    margin-left: auto;
     margin-right: auto;
    /* height: 80px; */
    display: flex;
    align-items: center;
      width: 100%;
}
.tablemodule .icon>img{
 width:100%;
 
}
   th.tablemodule-image {
      padding: 10px;
  }

  #shopify-section-{{ section.id }} th.tablemodule-keyhead {
          padding:16px 27px;
  }

  .tablemodule-valuecell span {
          width: 11px;
          margin: auto;
          display: block;
}
  
 .tablemodule-valuecell span img {
      width: 100%;
      display:block;
}
      
th.tablemodule-keyhead{
    max-width: 280px;
}
.tableheader_wrapper{
    align-items: center;
}
.tablemodule .tableheader_wrapper {
    display: flex;
    flex-direction: column;
    gap: 10px;
    align-items:center;
}
.tablemodule-row .tablemodule-keyhead {
    text-align: left;
}
.tablemodule-keyhead .a-color-secondary {
     font-size: 14px;
     font-style: normal;
     font-weight: 800;
     line-height: 20px; /* 125% */
}
.cell_secondry_color {
      background-color: aliceblue;
}
.cell_transparent_color {
      background-color: transparent;
}

/*   slider for table */

.bm-table-container {
    overflow: auto;
    border-image: initial;
}
.comparisonTable .bm-seeMore{
    margin-top: -47px;
    max-width: 100px;
}
 .comparisonTable table{
     border-spacing: 0px;
}

.tablemodule-keyhead .a-color-secondary{
    color: #242E2A;
    font-size: 14px;
    font-weight: 400;
    line-height: 26px;
    text-transform: capitalize;
}
.comparisonTable .tablemodule-valuecell{
    color: #000;
    font-size: 16px;
    font-weight: 500;
    line-height: 24px;
    margin-bottom: 0;
    text-align:center;
      border: 1px solid #ECEBE7;
}
.comparisonTable .heading-content h2 {
    color:#273D88;
    font-style: normal;
    font-weight: 700;
    line-height: 48px; /* 120% */
    letter-spacing: -0.8px;
}
.comparisonTable .tablemodule-image.fade-module p{
  color: #676767 !important;
}
.comparisonTable .tablemodule-image.fade-module{
      border: 1px solid #ECEBE7;
}
@media(max-width:1140px){
  .tablemodule-table>tbody>tr>th:nth-child(1) {
        position: sticky !important;
        background: rgb(255, 255, 255);
        left: 0px;
        z-index: 1;
    }
}

@media (max-width:740px) {
    #shopify-section-{{ section.id }} .tablemodule-image p{
        font-size:11px;
        line-height: 14px;
    }
  #shopify-section-{{ section.id }} th.tablemodule-keyhead {
          padding:10px;
  }
   
    .tablemodule-valuecell{
            min-width: 66px;
    }
    .comparisonTable {
    padding-bottom: 2em;
    }
    .tablemodule .icon{
        height: 82px;
    }
   
    #shopify-section-{{ section.id }} h2+p{
    margin-bottom: 20px;
    font-size:14px;
    }
    .tablemodule .slideBack,  .tablemodule .slidenext{
        max-width: 50px;

    }
    .tablemodule .slideBack{
        margin-right: 17px;
    }
   
    .comparisonTable h2 +p{
    line-height: 17px;
    }
    #shopify-section-{{ section.id }}{
    padding-top: 34px;
    padding-bottom: 15px;
    }
    .tablemodule-table>tbody>tr>th:nth-child(1) {
            position: sticky;
            background: rgb(255, 255, 255);
            left: 0px;
            padding: 16px 10px;
    }
   
    .tablemodule .slide-button span {
        display: inline-block;
        font-size: 20px;
        cursor: pointer;
        width: 100%;
    line-height:16px;
    }
    .tablemodule-keyhead .a-color-secondary{
        font-size: 9px;
        line-height: normal;
    }
}

@media(max-width:768px){
    .comparisonTable .heading-content h2{
        text-align:center !important;
        font-size:28px;
      margin-bottom:5px;
    }
}
@media (max-width:1200px){
    .comparisonTable .tablemodule{
        flex-wrap:wrap;
        justify-content: center;
    }
    .comparisonTable .heading-content{
        max-width:100%;
    }
    .comparisonTable .heading-content h2,
    .comparisonTable .heading-content p{
        text-align:center;
    }
}  
{% endstyle %}

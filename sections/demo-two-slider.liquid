<section class="slider_with_text">
  <div class="container ">
    <div class="swiper text_slider ">
      <div class="swiper-wrapper">
        {% for block in section.blocks %}
          {% if block.type == 'image_block' %}
            <div class="swiper-slide">
              <div class="slider-card">
                <img class="slide_img" src="{{ block.settings.image | img_url: 'master' }}">
              </div>
            </div>
          {% endif %}
        {% endfor %}
      </div>
      <div id="js-prev1" class="swiper-button-prev"></div>
      <div id="js-next1" class="swiper-button-next"></div>
      <!-- If we need pagination -->
      <div class="swiper-pagination"></div>
    </div>

    <div class="slider-content accordian-container">
      <div class="accordian-question">
        <ul class="question-list">
          {% for block in section.blocks %}
            {% if block.type == 'accordion_item' %}
              <li class="box{% if forloop.first %} active{% endif %}" data-id="option-{{ forloop.index }}">
                <div class="question">
                  <p class="question__text">
                   {{ block.settings.question }}
                  
                  </p>
                </div>
                <div class="answer">
                  {{ block.settings.answer }}
                </div>
              </li>
            {% endif %}
          {% endfor %}
        </ul>
      </div>
    </div>
  </div>
</section>


<script>


var cards = document.querySelectorAll('.slider_with_text .accordian-question .question-list .box');

function waitForSwiper(trigger) {
    var interval = setInterval(function() {
        if (typeof Swiper !== 'undefined') {
            clearInterval(interval);
            trigger();
        }
    }, 100);
    setTimeout(function() {
        clearInterval(interval);
    }, 15000);
}

function textSlider() {
    waitForSwiper(function() {
        var swiper = new Swiper('.text_slider', {
            navigation: {
                nextEl: '.swiper-button-next',
                prevEl: '.swiper-button-prev',
            },
            breakpoints: {
                769: {
                    slidesPerView: 1,
                    pagination: {
                        el: ".swiper-pagination",
                        clickable: true,
                    }
                },
                0: {
                    slidesPerView: 1,
                    spaceBetween: 10,
                    pagination: {
                        el: ".swiper-pagination",
                        clickable: true,
                    }
                },
            },
            on: {
                slideChange: function() {
                    var activeIndex = this.realIndex;
                    cards.forEach(function(card) {
                        card.classList.remove('active');
                    });
                    cards[activeIndex].classList.add('active');
                }
            }
        });

        // Add click event listeners to all question elements
        document.querySelectorAll('.slider_with_text .accordian-container .question').forEach(function(question, index) {
            question.addEventListener('click', function() {
                // Remove 'active' class from all 'question' elements
                document.querySelectorAll('.accordian-container .active').forEach(function(activeQuestion) {
                    activeQuestion.classList.remove('active');
                });
                // Add 'active' class to the clicked question's parent container
                this.parentNode.classList.add('active');

                // Activate the corresponding slide in the swiper
                swiper.slideTo(index);
            });
        });
    });
}

textSlider();
</script>

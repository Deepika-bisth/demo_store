{% capture image_block %}
  <div class="image-container {% if section.settings.image_position_mobile %} reverse {% endif %}">
    {% if section.settings.image != blank %}
      <img src="{{ section.settings.image | img_url: 'master' }}" width="" height="">
    {% endif %}
  </div>
{% endcapture %}

<div class="image-with-text page-width {{ section.settings.custom_class }}">
  {% if section.settings.layout == 'left' %}
    {{ image_block }}
  {% endif %}
  
  <div class="content-container">
    {% if section.settings.heading != blank %}
      <h2>{{ section.settings.heading }}</h2>
    {% endif %}
    
    {% if section.settings.description != blank %}
      <p>{{ section.settings.description }}</p>
    {% endif %}

    {% if section.settings.enable_feature == true %}
     <div class="icon-text-block-container">
        {% for block in section.blocks %}
            <div class="icon-text-block">
             
              {% if block.settings.icon != blank %}
                <div>
                <img src="{{ block.settings.icon | img_url:'master' }}" class="icon" width="36px" height="36px">
                </div>
                
              {% endif %}
               {% if block.settings.text != blank %}
                <p>{{ block.settings.text }}</p>
              {% endif %}
              
              {% if block.settings.description != blank %}
                <p class="block-description">{{ block.settings.description }}</p>
              {% endif %}
            </div>
        {% endfor %}
      </div>

      {% style %}
        .image-with-text .icon-text-block-container{
          display:flex;
          gap: 20px;
          flex-wrap: wrap;
        }
        .image-with-text .icon-text-block{
          width:48%;
          display:flex;
          align-items: center;
          gap: 15px;
        }
         .image-with-text .icon-text-block>img {
              max-width: 30px;
              width: 100%;
              display: block;
              /* margin: auto; */
          }
           
           .image-with-text .icon-text-block p {
                   max-width: 175px;
              font-style: normal;
              font-weight: 800;
              line-height: 26px;
              margin-top: 7px;
              text-align: left;
          }
          .image-with-text .icon-text-block .block-description{
            color: #121212;
            text-align: center;
            font-size: 18px;
            font-style: normal;
            font-weight: 500;
            line-height: 26px; /* 144.444% */
          }
        {% endstyle %}
    {% endif %}

    {% if section.settings.cta_text != blank %}
      <a href="{{ section.settings.cta_link }}" class="button">{{ section.settings.cta_text }}</a>
    {% endif %}
  </div>
  
  {% if section.settings.layout == 'right' %}
    {{ image_block }}
  {% endif %}
</div>

{% style %}
   #shopify-section-{{ section.id }}{
    padding-top: {{section.settings.padding_top}}px;
    padding-bottom:{{section.settings.padding_bottom}}px;
    background-color:{{section.settings.bg_color}};
  }
  
  .image-with-text{
    display: flex;
    align-items:center;
    gap:91px;
  }
  .image-with-text .image-container,
  .image-with-text .content-container{
    width:100%;
  }
  .image-with-text .image-container img{
    width:100%;
  }
  #shopify-section-{{ section.id }} .image-with-text .content-container{
    text-align:{{section.settings.content_align}};
  }
  #shopify-section-{{ section.id }} .image-with-text .btn{
    max-width:{{section.settings.btn_width}}px;
    background-color:{{section.settings.cta_bg}};
    margin-top: 35px;
  }
  #shopify-section-{{ section.id }} .image-with-text .content-container h2{
    color: {{section.settings.heading_color}};
    font-size: 42px;
    font-style: normal;
    font-weight: 700;
    line-height: 110%;
    margin:0;
    margin-bottom: 35px;
  }
  
 #shopify-section-{{ section.id }} .image-with-text .content-container >p{
    color: {{section.settings.description_color}};
    font-family: "Acherus Grotesque";
    font-size: 18px;
    font-style: normal;
    font-weight: 500;
    line-height: 26px; /* 144.444% */
 }
@media (max-width:768px){
     #shopify-section-{{ section.id }}{
      padding-top: {{section.settings.padding_top_mob}}px;
      padding-bottom:{{section.settings.padding_bottom_mob}}px;
    }
    #shopify-section-{{ section.id }} .image-with-text .image-container.reverse{
      order:-1;
    }
    .image-with-text{
      flex-wrap:wrap;
      gap: 30px; 
    }
    .image-with-text .text_with_img_service{
      padding-top: 30px;
      padding-bottom: 30px;
    }
    
    .image-with-text .icon-text-block-container{
      display:flex;
      gap: 10px !important;
      flex-wrap: wrap;
    }
    .image-with-text .icon-text-block>img{
          max-width: 30px;
    }
    .image-with-text .icon-text-block p{
       font-size: 16px;
       line-height: 26px;
        margin-top: 10px;
  }
}
{% endstyle %}


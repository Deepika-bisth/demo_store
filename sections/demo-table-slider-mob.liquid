  "name": "certification-table",
  "tag": "section",
  "class": "certification-table",
  "limit": 1,
  "settings": [
    {
      "type": "color",
        "id": "section_background",
        "label": "Background Color"
    },
    {
        "type": "text",
        "id": "section_padding",
        "label": "Paddings (top right bottom left)",
        "info": "6rem 6rem 0 6rem"
      },
      {
        "type": "text",

   color: var(--Secondary, #273D88);
    font-family: "Acherus Grotesque";
    font-size: 16px;
    font-style: normal;
    font-weight: 800;
    line-height: 20px;
    letter-spacing: 0.8px;
    text-transform: uppercase;
}
  
  .logo-list-slider .btn-container .btn {
    padding: 13px 57px !important;
    line-height: normal;
}
  
.testmonial-review-slider .container .des {
   color:{{section.settings.des_color}};
}
  
  @media(max-width:768px){
    .testmonial-review-slider .btn-container {
    flex-direction: column !important;
    gap: 20px;
 }
    .testmonial-review-slider .swiper-pagination-bullets.swiper-pagination-horizontal{
      position: unset;
    }

    .testmonial-review-slider .swiper-pagination-bullet-active {
    background-color: #273D88;
}
    
  }
  
  @media (min-width:769px){
     .logo-list-slider .main_heading{
       display:none;
     }
    .testmonial-review-slider .swiper-backface-hidden .swiper-slide{
           min-height: 500px;
    }
  }
  @media (max-width:768px){
  .logo-list-slider .container {
        padding: 0 0px;
    }

    .logo-list-slider {
        text-align: center;
    }
    #shopify-section-{{ section.id }} .slide-content-block p.main-head{
      font-size:{{section.settings.font_size_mob}}px;
      line-height:normal;
      margin-top:0;
    }
     #shopify-section-{{ section.id }} .slide-content-block p.des{
        font-size: 14px;
        line-height: 20px;
        margin-top: 0;
    } 
    
  }
  @media (max-width: 767px){
  .logo-list-slider {
    padding: 27px 15px;
 }
  }
{% endstyle %}
